@model IEnumerable<Garage3.Models.ViewModels.OwnerDetailsViewModel>

@{
    ViewData["Title"] = "MemberDetails";
}

<h1>Member Details</h1>

<div>
    <h4>Owner</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.First().FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.First().FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.First().SocialSecurityNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.First().SocialSecurityNumber)
        </dd>
    </dl>
</div>
<div>
    <h4>Vehicles</h4>
    <table class="table">
        <thead>
            <tr>
                <th> @Html.DisplayNameFor(model => model.RegistrationNumber)</th>
                <th> @Html.DisplayNameFor(model => model.Brand)</th>
                <th> @Html.DisplayNameFor(model => model.VehicleModel)</th>
                <th> @Html.DisplayNameFor(model => model.VehicleType)</th>
            </tr>
        <thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td> @Html.DisplayFor(modelItem => item.RegistrationNumber)  </td>
                    <td> @Html.DisplayFor(modelItem => item.Brand)  </td>
                    <td> @Html.DisplayFor(modelItem => item.VehicleModel)</td>
                    <td> @Html.DisplayFor(modelItem => item.VehicleType)  </td>

                    <td>
                        <a class="btn btn-primary" asp-action="Park" asp-route-ssn="@item.RegistrationNumber">Park</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    @*<a asp-action="Edit" asp-route-id="@Model.First().SocialSecurityNumber ">Edit</a> |*@
    <a asp-action="MemberOverview">Back to List</a>
</div>
