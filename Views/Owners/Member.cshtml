@model IEnumerable<Garage3.Models.ViewModels.OwnerDetailsViewModel>

@{
    ViewData["Title"] = "Member Details";
}

<h1>Member Details</h1>
<div>
    <h4>Member</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstOrDefault().FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstOrDefault().FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstOrDefault().SocialSecurityNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstOrDefault().SocialSecurityNumber)
        </dd>

    </dl>

</div>
<div>
    <h4>Vehicles</h4>
    <table class="table">
        <thead>
            <tr>
                <th> @Html.DisplayNameFor(model => model.RegistrationNumber)</th>
                <th> @Html.DisplayNameFor(model => model.Brand)</th>
                <th> @Html.DisplayNameFor(model => model.VehicleModel)</th>
                <th> @Html.DisplayNameFor(model => model.VehicleType)</th>
            </tr>
        <thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td> @Html.DisplayFor(modelItem => item.RegistrationNumber)  </td>
                    <td> @Html.DisplayFor(modelItem => item.Brand)  </td>
                    <td> @Html.DisplayFor(modelItem => item.VehicleModel)</td>
                    <td> @Html.DisplayFor(modelItem => item.VehicleType)  </td>
                    <td>
                        <a class="btn btn-primary" asp-controller="ParkingEvents"  asp-action="Park" asp-route-id="@item.Id">Park</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    @*<a asp-action="Edit" asp-route-id="@Model.First().SocialSecurityNumber ">Edit</a> |*@
    <div class="row">
        <div class="col">
            <a asp-action="Overview">Back to Overview</a>
        </div>
        <div class="col">
            <a asp-controller="Vehicles" asp-action="Register" asp-route-id="@Model.FirstOrDefault().Id">Register new vehicle</a>
        </div>
    </div>
</div>
