@model IEnumerable<Garage3.Models.ViewModels.MemberDetailsViewModel>;

@{
    ViewData["Title"] = "Member Overview";
}

<h1>Members Overview</h1>

<table class="table table-hover">

    <thead>
        <tr>
            <th> @Html.DisplayNameFor(model => model.FullName)        </th>
            <th> @Html.DisplayNameFor(model => model.NumberOfVehicles)        </th>
            <th> <a class="btn btn-primary float-right" asp-action="Register">Add new member</a></th>
        </tr>
    <thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td> @Html.DisplayFor(modelItem => item.FullName)  </td>
            <td> @Html.DisplayFor(modelItem => item.NumberOfVehicles)  </td>    

            <td>
                <a class="btn btn-primary" asp-action="MemberDetails" asp-route-id="@item.Id">Details</a>
                @*<a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Change</a>*@
            </td>
        </tr>
    }
    </tbody>
</table>

