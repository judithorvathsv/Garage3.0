@model IEnumerable<Garage3.Models.Owner>

@{
    ViewData["Title"] = "Owners";
}

<h1>Owners/Members</h1>

<p>
    <a asp-action="Register">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OwnerId">Edit</a> |
                <a asp-action="MemberDetails" asp-route-id="@item.OwnerId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OwnerId">Delete</a>

            </td>
        </tr>
}
    </tbody>
</table>
